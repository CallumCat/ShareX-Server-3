<html>

<head>
    <title>Home</title>
    <link rel="stylesheet" href="/css/topnav.css" type="text/css">
    <link rel="stylesheet" href="/css/login.css" type="text/css">
    <link rel="shortcut icon" href="http://localhost:6969/favicon.png">
</head>

<body style="background-color: rgb(59,59,59);">

    <% if(!req.query.page)%>

    <% if(req.query.uname && req.query.psw) res.redirect(`/${req.query.page}?u=${req.query.uname}&p=${req.query.password}`) %>


    <div class="topnav" id="colorbar">
        <a class="active" href="/">Home</a>
        <a href="/gallery">Gallery</a>
        <a href="/upload">Upload</a>
        <a href="/about">About</a>
        <a class="right" href="/terano">Terano</a>
    </div>

    <div id="main">

        <form action="">
            <div class="imgcontainer">
                <img src="/terano-2048.png" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <label for="uname"><b> Username </b></label><br>

                <input type="text" placeholder="Enter Username" name="uname" required><br>

                <label for="psw"><b> Password </b></label><br>

                <input type="password" placeholder="Enter Password" name="psw" required><br>
                <button type="submit">Login</button>
            </div>
        </form>

    </div>
</body>

</html>