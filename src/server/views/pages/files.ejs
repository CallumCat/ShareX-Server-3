<!DOCTYPE html>
<html lang="en">

<head>
  <title>Files - ShareX-Server</title>
  <link rel="stylesheet" href="/assets/css/style.css" type="text/css">
  <link rel="shortcut icon" href="/assets/favicon.png" />

  <meta content="Files - ShareX-Server" property="og:title">
  <!-- meta tags needed -->
</head>

<body>
  <%- include('../parts/navbar.ejs') %>

  <div class="title">
    <h2>Files</h2>
  </div>

  <div class="files">
    <% let i; %>
    <% files.forEach(e => { %>
    <% i++ %>
    <div class="fileDiv">
      <div class="fileName">
        <a class="fileDataA"><%= e.originalName %></a><br>
      </div>
      <div class="fileData">
        <a class="fileDataA">Uploaded At: <%= new Date(e.UploadedAt).toLocaleString() %></a><br>
        <a class="fileDataA">Views: <%= e.views %></a><br>
        <a class="fileDataA">Link: </a>
        <a class="Link" href="/files/<%= e.name %>">Click Here</a><br>
        <a class="fileDataA">Delete Link: </a>
        <a class="Link" href="/files/delete/<%= e.name %>">Click Here</a><br>
      </div>
    </div>
    <% }) %>
  </div>
  <div>
    <% if ( parseInt(page) > 0 ) { %>
    <a class="nextPage" style=" margin-bottom: 100px;" href="/files?p=<%= parseInt(page) - 1 %>">Prevous Page</a>
    <% }%>
    <% if ( i > 99 ) { %>
    <a class="nextPage" style="margin-bottom: 100px;" href="/files?p=<%= parseInt(page) + 1 %>">Next Page</a>
    <% }%>
  </div>

</body>

</html>